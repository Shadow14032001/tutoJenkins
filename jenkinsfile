        }
             //Faire un pull en premier lieu
        
        stage('init npm') {
            steps {
                sh '''
                npm init
                 '''
            }
        }
        stage('run develop') {
            steps {
                echo "Run develop version"
                sh '''console.log("Hello World!")'''  
            }     
        }
        stage('jest installs') {
            steps {
                sh 'npm install --save-dev jest'
            }
        }
        stage('tests develop') {
            steps {
                sh 'npx jest'
            }
        }
        // stage('build') {
        //     // sh '''javac Main.java'''
        //     sh 'node Main.js'
        // }
        // stage('deploy') {
